<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="liip_monitor.list_checks_command.class">Liip\MonitorBundle\Command\ListChecksCommand</parameter>
        <parameter key="liip_monitor.health_check_command.class">Liip\MonitorBundle\Command\HealthCheckCommand</parameter>
    </parameters>

    <services>
        <service id="liip_monitor.list_checks_command" class="%liip_monitor.list_checks_command.class%">
            <argument>%liip_monitor.default_group%</argument>
            <tag name="console.command" />
        </service>
        <service id="liip_monitor.health_check_command" class="%liip_monitor.health_check_command.class%">
            <argument>%liip_monitor.default_group%</argument>
            <tag name="console.command" />
        </service>
    </services>
</container>
